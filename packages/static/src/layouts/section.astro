---
import { getCollection } from 'astro:content'

import Layout from '~/layouts/base.astro'

import Footer from '~/components/footer.astro'
import Nav from '~/components/nav.astro'
import { getEntry } from 'astro:content'

interface Props {
  title?: string
}

const { title } = Astro.props

const [edition] = await getCollection('editions').then((entries) =>
  entries.slice(-1),
)

const { id, data } = edition

const { date, venue } = data

const { name } = venue && (await getEntry(venue).then(({ data }) => data))
---

<Layout edition={id} {title}>
  <Nav edition={id} {date} venue={name} />

  <slot />

  <Footer />
</Layout>
