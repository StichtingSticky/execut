---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<T extends HTMLTag> = Polymorphic<{ as: T }>

const {
  as: Tag = 'button',

  // This will capture all other attributes
  ...attributes
} = Astro.props
---

<Tag
  class:list={[
    'fixed',
    'bottom-2',
    'right-2',
    'z-50',
    'bg-white/40',
    'p-1',
    'transition',
    'backdrop-blur-sm',
    'hover:shadow-xl',
    'hover:opacity-80',
    'focus:ring-3',
    'focus:ring-white/20',
    'focus:outline-hidden',
    ...(attributes.class?.split(' ') ?? []),
  ]}
  {...attributes}>
  <slot />
</Tag>
