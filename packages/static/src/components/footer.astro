---
import { Icon } from 'astro-icon/components'

import Container from '~/components/container.astro'

const year = new Date().getFullYear()

function intersperse<T>(xs: T[], delim: T): T[] {
  return xs.flatMap((x, i) => (i === 0 ? [x] : [delim, x]))
}

const socials = [
  ['instagram', 'https://www.instagram.com/execut_conference/'],
  ['linkedin', 'https://www.linkedin.com/showcase/execut-conference/'],
  ['youtube', 'https://www.youtube.com/@execut-conference'],
]
---

<footer class="mt-12 flex-1 bg-subtle-highlight py-6 sm:pt-8 md:pt-10">
  <Container>
    <div class="flex justify-center gap-2">
      {
        [
          ...intersperse(
            socials.map(([name, href]) => (
              <a
                class="transition hover:bg-brown/40 hover:shadow-sm focus:outline-hidden focus:ring-3 focus:ring-brown/40"
                {href}>
                <Icon name={`mdi:${name}`} class="h-10 w-10 fill-brown p-2" />
              </a>
            )),
            <hr class="my-2 h-6 w-px bg-brown/40" />,
          ),
        ]
      }
    </div>

    <div class="mt-12 flex flex-col items-center">
      <Icon name="icon-mono" class="h-12 w-12" />

      <p class="mt-4">
        Copyright {year}
        <a
          class="underline transition-colors hover:text-brown/80"
          href="https://stichtingsticky.nl/">Stichting Sticky</a
        >. All rights reserved.
      </p>

      <p class="my-2">
        Please take note of our
        <a class="underline" href="/code-of-conduct.pdf">Code of Conduct</a>,
        <a class="underline" href="/privacy-policy-2023-02-27.pdf"
          >Privacy Policy</a
        >, and
        <a class="underline" href="/general-terms.pdf">General Terms</a>.
      </p>
    </div>
  </Container>
</footer>
