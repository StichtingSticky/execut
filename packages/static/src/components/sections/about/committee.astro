---
import type { CollectionEntry } from 'astro:content'

interface Props{
  committee: CollectionEntry<'editions'>['data']['committee']
}

const { committee } = Astro.props
---

<ul class="mt-4 sm:mt-6">
  {committee!.map(({ name, role, href }) => (
    <li class="grid grid-cols-2">
      <a class="text-green underline transition-colors hover:text-green/80" href={href}>{name}</a>
      <p class="capitalize">{role}</p>
    </li>
  ))}
</ul>
