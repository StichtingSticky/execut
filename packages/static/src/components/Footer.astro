---
import { Icon } from 'astro-icon/components'

import Container from '~/components/Container.astro'

const year = new Date().getFullYear()

function intersperse<T>(xs: T[], delim: T): T[] {
  return xs.flatMap((x, i) => i === 0 ? [x] : [delim, x])
}

const socials = [
  ['instagram', 'https://www.instagram.com/execut_conference/'],
  ['linkedin', 'https://www.linkedin.com/showcase/execut-conference/'],
  ['youtube', 'https://www.youtube.com/@execut-conference'],
]
---

<footer class="flex-1 py-6 mt-12 bg-subtle-highlight sm:pt-8 md:pt-10">
  <Container>
    <div class="flex justify-center gap-2">
      {[...intersperse(socials.map(([name, href]) => (
        <a class="transition hover:bg-brown/40 hover:shadow focus:ring focus:ring-brown/40 focus:outline-none" {href}>
          <Icon name={`mdi:${name}`} class="w-10 h-10 p-2 fill-brown" />
        </a>
      )), <hr class="w-px h-6 my-2 bg-brown/40" />)]}
    </div>

    <div class="flex flex-col items-center mt-12">
      <Icon name="logo-mono" class="w-12 h-12" />

      <p class="mt-4">
        Copyright {year}
        <a class="underline transition-colors hover:text-brown/80" href="https://stichtingsticky.nl/">Stichting Sticky</a>.
        All rights reserved.
      </p>
    </div>
  </Container>
</footer>
