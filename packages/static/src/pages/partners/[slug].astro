---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'

import { Icon } from 'astro-icon/components'

import Layout from '~/layouts/section.astro'

import Section from '~/components/section.astro'

export const getStaticPaths = async () => {
  const enties = await getCollection('partners')

  return enties.map((entry) => {
    const { slug } = entry

    return {
      params: { slug },
      props: { entry },
    }
  })
}

const { entry } = Astro.props

const { data, render } = entry

const { name, industry, logo, contact } = data

const { website, socials } = contact

const { Content } = await render()
---

<Layout title={name}>
  <Section>
    <div class="flex flex-col items-center">
      <Image class="h-32 m-auto" src={logo} alt={name} />

      <div class="flex mt-4 sm:mt-8">
        {socials.map((social) => {
          const [[name, href]] = Object.entries(social)

          return (
            <a class="transition hover:bg-brown/40 hover:shadow focus:ring focus:ring-brown/40 focus:outline-none" {href}>
              <Icon name={`mdi:${name}`} class="w-10 h-10 p-2 fill-brown" />
            </a>
          )
        })}
      </div>

      <a class="mt-2 text-center underline transition-colors text-green hover:text-green/80" href={website}>
        Learn more about {name}
      </a>
    </div>

    <h2 class="mt-3 font-mono text-2xl font-bold sm:mt-12 md:mt-0 text-red">About {name}</h2>
    <p class="text-md text-brown/60">{industry}</p>

    <div class="my-4 prose text-justify max-w-none sm:mt-6">
      <Content />
    </div>
  </Section>
</Layout>
